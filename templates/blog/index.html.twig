{% extends 'base.html.twig' %}

{% block title %}All Blogs{% endblock %}

{% block body %}
<div class="container-fluid bg-light py-3">
    <div class="container">
        <div class="text-start text-lg-center">
            <h1>
                <a href="/create" class="float-start btn btn-primary">Create Blog</a>
                All Blogs </h1>
        </div>
        <div class="row">            
            {% if blogs %}
           {% for blog in blogs %}
            <div class="col-md-6 gap-3 mb-3">                
                <div class="pb-4">
                    <img src="{{blog.image}}" alt="{{blog.title}}" class="img-fluid" style="height:300px;width:100%;">   
                </div>
                <div>
                    <h1>{{blog.title}}</h1>  
                <a href="/blogs/{{blog.id}}" class="btn btn-dark">Read More</a>   
                </div>          
            </div>
            {% endfor %}
            {% else %}
            <div>No blogs available</div>
            {% endif %}
           
            
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{% endblock %}